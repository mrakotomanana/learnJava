                    <source>8</source>
                    <target>8</target>
                </configuration>
            </plugin>

            <!--
               eto ra anova config @output si ni nom fichier
         -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>3.2.0</version>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>

                <configuration>
                    <outputDirectory>E:\jarSources</outputDirectory>
                    <finalName>filename</finalName>
                    <attach>true</attach>
                </configuration>

            </plugin>


            <!--
            To solve it, we can use this maven-shade-plugin to create an uber/fat-jar â€“ group everything into
            a single jar file.

            java -cp target/test-1.0-SNAPSHOT.jar org.example.main.App
            misi olana io ra tsi asiana anio shade io ni phase package

            ampiasaina ref tsi meti tafiditra ao @lay .jar lay dependance
            asiana goal shade ni phase package

            rehefa lancena ito java -jar target/test-1.0-SNAPSHOT.jar org.example.main.App
            dia mahazo an'ito :: aucun attribut manifest principal dans target/test-1.0-SNAPSHOT.jar

            To solve it, add the main class in maven-shade-plugin like this.
            <configuration>
                      <transformers>
                          <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                              <mainClass>org.example.main.App</mainClass>
                          </transformer>
                      </transformers>
                  </configuration>

                  mvn clean package indrai alo
                  zai vao lancena ito java -jar target/test-1.0-SNAPSHOT.jar org.example.main.App
      -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.2.0</version>
                <executions>
                    <!-- Attach the shade goal into the package phase -->
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>

                        <configuration>
                            <transformers>
                                <transformer
                                        implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                    <mainClass>org.example.main.App</mainClass>
                                </transformer>
                            </transformers>
                        </configuration>

                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>
</project>
